<Window x:Class="Prezentacja.View.KuleViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Prezentacja.View"
             xmlns:viewModel="clr-namespace:Prezentacja.ViewModel"
             mc:Ignorable="d" 
             Height="550" Width="800"
             ResizeMode="NoResize">

    <Window.DataContext>
        <viewModel:ViewModeler/>
    </Window.DataContext>

    <Grid>
        <Button Content="Dodaj Kule" Margin="280,14,414,467" Command="{Binding ConfirmCommand}" CommandParameter="{Binding ElementName=BallPool}"/>
        <TextBox x:Name="NumberBalls" TextWrapping="Wrap" Text="{Binding BallsNumber}" Margin="143,14,551,470" PreviewTextInput="NumberValidationTextBox"/>
        <Canvas x:Name="BallPool"  Height="350" Width="600"/>
        <Border BorderBrush="Black" BorderThickness="1" Height="350" Width="600"/>

    </Grid>
</Window>
