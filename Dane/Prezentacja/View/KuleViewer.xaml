<Window x:Class="Prezentacja.View.KuleViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Prezentacja.View"
             xmlns:viewModel="clr-namespace:Prezentacja.ViewModel"
             mc:Ignorable="d" 
             Height="550" Width="800"
             ResizeMode="NoResize">

    <Window.DataContext>
        <viewModel:ViewModeler/>
    </Window.DataContext>

    <Grid>
        <Button Content="Dodaj Kule" Margin="636,117,58,364" Command="{Binding ConfirmCommand}" CommandParameter="{Binding ElementName=BallPool}"/>
        <TextBox x:Name="NumberBalls" TextWrapping="Wrap" Text="{Binding BallsNumber}" Margin="636,45,58,440" />
        <Canvas x:Name="BallPool" Margin="10,10,207,10" Height="407" Width="580"/>
        <Border BorderBrush="Black" BorderThickness="1" Margin="10,64,208,63"/>

    </Grid>
</Window>
